@using ViaDoc.EntidadNegocios;

@{
    ViewBag.Title = "Smtp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewData["mensajeError"] != null)
{
    <script type="text/javascript">
        var respuesta = '@Html.Encode(ViewData["mensajeError"].ToString())';
        llamaModal('warning', respuesta, 2500);
    </script>
}
<section class="content">
    <section class="content-header" style="padding-bottom:5px; padding-top:8px">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Configuración</a></li>
                        <li class="breadcrumb-item active">Compañia</li>
                    </ol>
                </div>
                <div class="col-sm-6">

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="container-fluid">
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">Filtros de Búsquedas</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Tipo Servicio:</label>
                            <select id="txtTipoServicio" class="form-control js-example-basic-single">
                                <option value="FIRMA">Firma</option>
                                <option value="AUTORIZACION">Autorización</option>
                                <option value="CORREO">Notificación</option>
                            </select>
                        </div>
                    </div>
                </div>
                <center>
                    <div class="col-sm-3">
                        <input type="button" id="btnBuscar" class="btn btn-block btn-primary" value="Buscar" />
                    </div>
                </center>
            </div>
        </div>
    </div>

    <section class="content-header" style="padding-top:0px">
        <div id="divGrigTiempoProceso">
        </div>
    </section>

    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <a id="btnGuardarParametro" href="#" class="btn btn-block btn-primary">Agregar</a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-Sucursal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Configuración de Servicio</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Cod. Sucursal:</label>
                                <input id="txCodSucursal" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label>Dirección Matriz:</label>
                                <input id="txDireccionMatriz" type="number" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Estado</label>
                                <select id="txObligadoContabilida" class="form-control js-example-basic-single">
                                    <option value="True">Si</option>
                                    <option value="False">No</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <a id="btnGuardarParametro" href="#" class="btn btn-block btn-primary">Guardar</a>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <a id="btnGuardarParametro" href="#" class="btn btn-block btn-primary">Cancelar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>

    $('#btnBuscar').on('click', function () {
        CargarTiempoServicio();
    });

</script>