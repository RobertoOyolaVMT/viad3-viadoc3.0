@using ViaDoc.EntidadNegocios;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewData["mensajeError"] != null)
{
    <script type="text/javascript">
        var respuesta = '@Html.Encode(ViewData["mensajeError"].ToString())';
        llamaModal('warning', respuesta, 2500);
    </script>
}

<section class="content">
    <section class="content-header" style="padding-bottom:5px; padding-top:8px">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Utilitarios</a></li>
                        <li class="breadcrumb-item active">GenererPDF</li>
                    </ol>
                </div>
                <div class="col-sm-6">

                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Filtros de Búsquedas</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Compañía</label>
                                <select class="form-control js-example-basic-single" id="txtIdEmpresa">
                                    @foreach (CatCompania item in ViewData["listEmpresas"] as List<CatCompania>)
                                    {
                                        <option value="@item.idCompania">@item.nombreComercial</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Fecha Inicio:</label>
                                <div class="input-group date" data-target-input="nearest">
                                    <input type="text" name="txtFechaInicio" id="txtFechaInicio" maxlength="0" class="form-control datetimepicker-input" data-target="#txtFechaInicio" />
                                    <div class="input-group-append" data-target="#txtFechaInicio" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Tipo Documento</label>
                                <select class="form-control js-example-basic-single" id="txtIdTipoDocumento">
                                    @foreach (CatDocumento item in ViewData["listDocumentos"] as List<CatDocumento>)
                                    {
                                        <option value="@item.idTipoDocumento">@item.descripcion</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Fecha Fin:</label>
                                <div class="input-group date" data-target-input="nearest">
                                    <input type="text" id="txtFechaFin" name="txtFechaFin" maxlength="0" class="form-control datetimepicker-input" data-target="#txtFechaFin" />
                                    <div class="input-group-append" data-target="#txtFechaFin" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row  justify-content-center">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <br />
                                <input type="button" id="btnPDF" class="btn btn-block btn-primary mt-2" value="GenererPDF" onclick="GenerarPDF('PDF')" />
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <br />
                                <input type="button" id="btnXML" class="btn btn-block btn-primary mt-2" value="GenererXML" onclick="GenerarPDF('XML')" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</section>

<script>
    $('#txtFechaInicio').datetimepicker({
        format: 'DD/MM/YYYY'
    });

    $('#txtFechaFin').datetimepicker({
        format: 'DD/MM/YYYY'
    });

</script>
